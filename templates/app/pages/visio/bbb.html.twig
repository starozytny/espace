{% extends 'app/layout/layout.html.twig' %}

{% block title %}BBB visioconférence{% endblock %}

{% block noindex %}
    <meta name="robots" content="noindex">
    <meta name="googlebot" content="noindex">
{% endblock %}

{% block h1 %}
    <h1>
        Rejoindre {{ lesson ? lesson.nameLesson : nameRoom }}
    </h1>
    <p>
        {{ lesson ? "Cours de " ~ lesson.startString ~ " à " ~ (lesson.endString ? lesson.endString : "?") : ""}}
    </p>
{% endblock %}

{% block main_content %}
    <div id="join-bbb" data-context="recent" data-teacher="{{ teacher }}" data-name-room="{{ nameRoom }}" data-lesson="{{ lesson ? lesson.id : null }}" data-is-custom="{{ isCustom }}"></div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('visio') }}
{% endblock %}